<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mail adresiniz"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:id="@+id/girisEmail"/>
    <EditText
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifreniz"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:id="@+id/girisPassword"/>
    
   <Button
       android:layout_width="match_parent"
       android:layout_marginTop="50dp"
       android:layout_marginRight="100dp"
       android:layout_marginLeft="100dp"
       android:text="@string/giris_button_text"
       android:textSize="18dp"
       android:onClick="girisYap"
       android:layout_height="wrap_content"/>

    <EditText
        android:minHeight="48dp"
        android:layout_marginTop="50dp"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mail adresiniz"
        android:textAlignment="center"
        android:scaleType="center"
        android:id="@+id/kayitEmail"/>
    <EditText
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifreniz"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:id="@+id/kayitPassword"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:text="@string/kayit_button_text"
        android:textSize="18dp"
        android:onClick="kayitOl"
        android:layout_height="wrap_content"/>




</LinearLayout>